{
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "extends": [
    "eslint:recommended",
    "standard",
    "plugin:node/recommended"
  ],
  "env": {
    "node" : true
  },
  "rules": {
    "no-unused-expressions": "off",
    "no-var": 2,
    "prefer-const": 2,
    "object-curly-spacing": [2, "always"],
    "no-unused-vars": ["error", { "varsIgnorePattern": "^env$" }]
  }
}
